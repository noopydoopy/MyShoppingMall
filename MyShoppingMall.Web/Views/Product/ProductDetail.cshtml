@model MyShoppingMall.Web.Models.ProductModel

@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ProductDetail</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Picture
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.PicUrl" style="height:150px;" />
        </dd>
    </dl>
</div>
<div>
    <form asp-action="BuyProduct">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.Amount > 0)
            {
                <div class="col-sm-2">
                    <input type="hidden" value="@Model.Id" name="id" />
                    <input type="number" id="txtAmount" name="amount" class="form-control" width="10" min="0" max="@Model.Amount" required />
                </div>
                <div class="col-sm-2">
                    <button id="btnBuy" class="btn btn-primary" type="submit">Buy</button>
                </div>
            }
            else
            {
                <span class="text-danger">Sold out</span>
            }

        </div>
    </form>

</div>

<script>
    function validateForm() {
        var selectAmount = document.getElementById('txtAmount').value;
        document.getElementById('valAmount').style.display = 'none';

        if (selectAmount > @Model.Amount) {
            event.preventDefault()
        }

    }

</script>